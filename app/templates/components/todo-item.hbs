<li>
  <div class="checkbox">
    {{input type="checkbox"
        name="todoCheckBox"
        checked=model.isCompleted
        change=(action "toggleTodo")}}
    {{#if editMode}}
      {{#focus-input}}
        {{input type="text"
          insert-newline="saveTodo"
          focus-out="saveTodo"
          value=model.text}}
      {{/focus-input}}
    {{else}}
      <label>
        <span {{action "editTodo" on="doubleClick"}} class="{{if model.isCompleted 'strike-through'}}">
          {{ model.text }}
        </span>
      </label>
    {{/if}}
    {{#unless editMode}}
      <button {{action "removeTodo"}} class="destroy">x</button>
    {{/unless}}
  </div>
</li>
